doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title MineAPI
    link(rel="stylesheet" href="css/index.css")
    link(rel="stylesheet" href="css/template.css")
    link(rel="shortcut icon" href="assets/favicons/index.png") 
  body 
    h1.mtitle
      img(src="assets/img/creeper_head.png")
      span Bem-vindo a MineAPI
    .box
      h3 Documentação
    .box
      p.ptitle Mobs
        img(src="assets/img/diamond.webp")
      p Todos os mobs:
        a(target="_blank" href="/api/mobs/all") /api/mobs/all
      p Passivos:
        a(target="_blank" href="/api/mobs/passive") /api/mobs/passive
      p Agressivos:
        a(target="_blank" href="/api/mobs/aggressive") /api/mobs/aggressive
      p Por nome:
        .inputbox
          select#mobSelect
            for mob, i in mobs
              option= mob.name
          button(onclick="parseLink('mobs')") GET
    .box 
      p.ptitle Encantamentos 
        img(src="assets/img/diamond.webp")
      p Todos os encantamentos:
        a(target="_blank" href="/api/enchantments/all") /api/enchantments/all
      p Encantamentos de tesouro:
        a(target="_blank" href="/api/enchantments/treasure") /api/enchantments/treasure 
      p Por nome:
        .inputbox 
          select#enchantSelect
            for enchant,i in enchants
              option= enchant.name
          button(onclick="parseLink('enchants')") GET
    .box 
      p.ptitle Poções
        img(src="assets/img/diamond.webp")
      P EM CONSTRUÇÃO
      script(src="js/index.js") 